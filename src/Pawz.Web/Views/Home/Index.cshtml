@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout"; // This specifies that _Layout.cshtml should be used for this view
}

<!-- Hero Section with Slideshow -->
<section class="hero d-flex align-items-center">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Welcome to Pawz - Your Ultimate Pet Destination</h1>
                <p>Discover an array of adorable pets waiting for a loving home. Whether you want to buy a new furry friend or adopt a pet from our users, Pawz is here to help you find your perfect match.</p>
                <a href="@Url.Action("About", "Home")" class="btn btn-primary btn-lg">Explore Now</a>
                <a href="#" class="btn btn-secondary btn-lg">Join Us</a>
            </div>
            <div class="col-md-6">
                <div id="heroCarousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#heroCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#heroCarousel" data-slide-to="1"></li>
                        <li data-target="#heroCarousel" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/images/dogs.jpg" class="d-block w-100 img-fluid" alt="Cute dogs 1">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/pet4.jpg" class="d-block w-100 img-fluid" alt="Cute dogs 2">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/pet5.png" class="d-block w-100 img-fluid" alt="Cute dogs 3">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#heroCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#heroCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Pawz Section -->
<section class="why-choose-pawz py-5">
    <div class="container">
        <h2 class="text-center">Why Choose Pawz?</h2>
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <i class="fas fa-paw fa-3x mb-2"></i>
                <h4>Buy Pets</h4>
                <p>Browse through our diverse collection of pets ranging from dogs and cats to exotic animals.</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="fas fa-heart fa-3x mb-2"></i>
                <h4>Adopt Pets</h4>
                <p>Give an abandoned pet a second chance at a happy life through our adoption platform.</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="fas fa-smile fa-3x mb-2"></i>
                <h4>User-Friendly</h4>
                <p>Easily navigate through our website using our intuitive design.</p>
            </div>
        </div>
    </div>
</section>

<!-- FAQ Section -->
<section class="faq-section py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4">Frequently Asked Questions</h2>
        <!-- Add FAQ content here -->
    </div>
</section>
