@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pawz - Shop</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>

    <!-- Shop Section -->
    <section class="shop-section py-5 bg-light">
        <div class="container">
            <h2 class="text-center">Our Shop</h2>
            <p class="text-center">Explore our curated selection of pet products and find the perfect items for your furry friends.</p>
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <img src="shop4.jpeg" class="card-img-top" alt="Friendly Dog">
                        <div class="card-body">
                            <h5 class="card-title">Friendly Dog</h5>
                            <p class="card-text">Energetic and playful, this dog loves to interact and is great for active families. Perfect for those who enjoy outdoor adventures and playful moments.</p>
                            <a href="#" class="btn btn-primary">Buy Now</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <img src="adopt3.jpg" class="card-img-top" alt="Charming Dog">
                        <div class="card-body">
                            <h5 class="card-title">Charming Dog</h5>
                            <p class="card-text">Smart and friendly, this dog has a pleasant demeanor and fits well into various lifestyles. Whether you're looking for a companion for your daily runs or a relaxed friend at home, this dog is a great match.</p>
                            <a href="#" class="btn btn-primary">Buy Now</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <img src="petcat6.jpg" class="card-img-top" alt="Playful Cat">
                        <div class="card-body">
                            <h5 class="card-title">Playful Cat</h5>
                            <p class="card-text">Curious and affectionate, this cat enjoys interactive toys and cozy naps. Perfect for families or individuals looking for a loving and playful companion.</p>
                            <a href="#" class="btn btn-primary">Buy Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="py-4 bg-light">
        <div class="container text-center">
            <p>&copy; 2024 Your Company | <a href="#">Privacy Policy</a> | <a href="#">Terms of Use</a></p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

