@{
    Layout = "_Layout";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pawz - Adopt a Pet</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>

    <!-- Adopt Section -->
    <section id="adopt" class="adopt-section py-5">
        <div class="container">
            <h2 class="text-center">Adopt a Pet</h2>
            <p class="text-center">Give a loving home to a pet in need. Browse through our selection of adoptable pets below.</p>
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <img src="adopt2.jpg" class="card-img-top" alt="Pet 1">
                        <div class="card-body">
                            <h5 class="card-title">Loyal Companion</h5>
                            <p class="card-text">This affectionate dog has a heart of gold. He's been through a lot but still has so much love to give. Ready to find his forever home.</p>
                            <a href="#" class="btn btn-primary">Adopt Now</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <img src="playfulkitty.png" class="card-img-top" alt="Pet 2">
                        <div class="card-body">
                            <h5 class="card-title">Playful Kitten</h5>
                            <p class="card-text">This little kitten is full of energy and joy. She loves to play and explore, making her the perfect addition to an active household.</p>
                            <a href="#" class="btn btn-primary">Adopt Now</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <img src="gentlerabbit.png" class="card-img-top" alt="Pet 3">
                        <div class="card-body">
                            <h5 class="card-title">Gentle Rabbit</h5>
                            <p class="card-text">A calm and gentle rabbit that enjoys quiet time and gentle pats. Perfect for someone looking for a peaceful companion.</p>
                            <a href="#" class="btn btn-primary">Adopt Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="py-4 bg-light">
        <div class="container text-center">
            <p>&copy; 2024 Your Company | <a href="#">Privacy Policy</a> | <a href="#">Terms of Use</a></p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

