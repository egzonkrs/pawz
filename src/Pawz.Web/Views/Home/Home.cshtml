@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pawz - Your Ultimate Pet Destination</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">
            <img src="logo.png" alt="Pawz Logo" style="height: 40px;">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="home.html">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="shop.html">Shop</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="adopt.html">Adopt</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="about.html">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="signin.html">Sign in</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-outline-secondary" href="register.html">Register</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Hero Section with Slideshow -->
    <section class="hero d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1>Welcome to Pawz - Your Ultimate Pet Destination</h1>
                    <p>Discover an array of adorable pets waiting for a loving home. Whether you want to buy a new furry friend or adopt a pet from our users, Pawz is here to help you find your perfect match.</p>
                    <a href="about.html" class="btn btn-primary">Explore Now</a>
                    <a href="#" class="btn btn-secondary">Join Us</a>
                </div>
                <div class="col-md-6">
                    <div id="heroCarousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#heroCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#heroCarousel" data-slide-to="1"></li>
                            <li data-target="#heroCarousel" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="dogs.jpg" class="d-block w-100 img-fluid" alt="Cute dogs 1">
                            </div>
                            <div class="carousel-item">
                                <img src="pet4.jpg" class="d-block w-100 img-fluid" alt="Cute dogs 2">
                            </div>
                            <div class="carousel-item">
                                <img src="pet5.png" class="d-block w-100 img-fluid" alt="Cute dogs 3">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#heroCarousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#heroCarousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Why Choose Pawz Section -->
    <section class="why-choose-pawz py-5">
        <div class="container">
            <h2 class="text-center">Why Choose Pawz?</h2>
            <div class="row">
                <div class="col-md-4 text-center">
                    <i class="fas fa-paw fa-3x"></i>
                    <h4>Buy Pets</h4>
                    <p>Browse through our diverse collection of pets ranging from dogs and cats to exotic animals.</p>
                </div>
                <div class="col-md-4 text-center">
                    <i class="fas fa-heart fa-3x"></i>
                    <h4>Adopt Pets</h4>
                    <p>Give an abandoned pet a second chance at a happy life through our adoption platform.</p>
                </div>
                <div class="col-md-4 text-center">
                    <i class="fas fa-smile fa-3x"></i>
                    <h4>User-Friendly</h4>
                    <p>Easily navigate through our website using our intuitive design.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="faq-section py-5 bg-light">
        <div class="container">
            <!-- Add FAQ content here -->
        </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

