@model Pawz.Web.Models.Wishlist.WishlistViewModel

@{
    ViewBag.Title = "Your Wishlist";
    Layout = "_Layout";
}

@if (Model != null && Model.Pets.Any())
{
    <div class="container">
        <div class="row mt-30">
            @foreach (var pet in Model.Pets)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="product-item">
                        <div class="card" data-pet-id="@pet.Id">
                            <img class="card-img-top img-fluid hover-effects"
                                 src="@(pet.PetImages?.FirstOrDefault(img => img.IsPrimary)?.ImageUrl ?? "/images/default-image.webp")"
                                 alt="Pet Image"/>

                            <!-- Remove from wishlist button (Filled heart icon) -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="white" class="wishlist-heart bi bi-heart-fill remove-from-wishlist" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314"/>
                            </svg>
                        </div>

                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="@Url.Action("Details", "Pet", new { id = pet.Id })">
                                    @pet.Name
                                </a>
                            </h4>
                            <p class="card-text">@pet.About</p>
                            <ul class="list-inline">
                                <li><strong>Species:</strong> @(pet.Breed.Species.Name)</li>
                                <li><strong>Breed:</strong> @(pet.Breed.Name)</li>
                                <li><strong>Location:</strong> @pet.Location?.Address, @pet.Location?.City?.Name,
                                    @pet.Location?.City?.Country?.Name </li>
                                <li><strong>Age:</strong> @pet.AgeYears</li>
                                <li><strong>Posted by:</strong> @(pet.User?.FirstName) @(pet.User?.LastName)</li>
                                <li><strong>Date:</strong> @pet.CreatedAt.ToString("d MMMM yyyy")</li>
                                <li><strong>Price:</strong> @pet.Price.ToString("C")</li>
                            </ul>
                            <form asp-action="RemovePetFromWishlist" method="post">
                                <input type="hidden" name="petId" value="@pet.Id" />
                                <input type="submit" value="Remove from Wishlist" class="btn btn-danger" />
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
        <form asp-action="ClearWishlist" method="post" class="text-right">
            <input type="hidden" name="Id" value="@Model.UserId" />
            <input type="submit" value="Clear Wishlist" class="btn btn-warning" />
        </form>
    </div>
}
else
{
    <p>Your wishlist is empty.</p>
}

<script>
    $(document).ready(function () {
        // Remove from wishlist via AJAX
        $('.remove-from-wishlist').click(function (event) {
            event.preventDefault(); // Prevent form submission

            var petId = $(this).closest('.card').data('pet-id');

            $.ajax({
                url: '/Wishlist/RemoveFromWishlist',
                type: 'POST', // Changed from DELETE to POST
                data: { petId: petId },
                success: function (result) {
                    if (result.success) {
                        // Remove the card from the UI
                        $('[data-pet-id="' + petId + '"]').fadeOut();
                    } else {
                        alert(result.message || "Error removing from wishlist");
                    }
                },
                error: function () {
                    alert("Error removing from wishlist");
                }
            });
        });
    });
</script>
