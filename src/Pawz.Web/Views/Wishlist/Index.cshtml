@model Pawz.Web.Models.Wishlist.WishlistViewModel

@{
    ViewBag.Title = "Your Wishlist";
    Layout = "_Layout";
}

@if (Model != null && Model.Pets.Any())
{
    <section class="page-search">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="ClearWishlist" method="post">
                        <input type="hidden" name="Id" value="@Model.UserId"/>
                        <input type="submit" value="Clear Wishlist" class="btn btn-outline-light w-100"/>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <div class="container">
        <div class="row mt-30">
            @foreach (var pet in Model.Pets)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="product-item">
                        <div class="card" data-pet-id="@pet.Id">
                            <img class="card-img-top img-fluid hover-effects"
                                 src="@(string.IsNullOrEmpty(pet.PetImages?.FirstOrDefault(img => img.IsPrimary)?.ImageUrl) ? "/images/default-image.webp" : $"/images/pets/{pet.PetImages.FirstOrDefault(img => img.IsPrimary)?.ImageUrl}")"
                                 alt="Pet Image"
                                 onclick="removeFromWishlist('@pet.Id')"/>

                            <!-- Remove from wishlist button (Filled heart icon) -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="white" class="wishlist-heart bi bi-heart-fill remove-from-wishlist" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314"/>
                            </svg>
                        </div>

                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="@Url.Action("Details", "Pet", new { id = pet.Id })">
                                    @pet.Name
                                </a>
                            </h4>
                            <p class="card-text">@pet.About</p>
                            <ul class="list-inline">
                                <li>
                                    <strong>Species:</strong> @(pet.Breed.Species.Name)
                                </li>
                                <li>
                                    <strong>Breed:</strong> @(pet.Breed.Name)
                                </li>
                                <li>
                                    <strong>Location:</strong> @pet.Location?.Address, @pet.Location?.City?.Name,
                                    @pet.Location?.City?.Country?.Name
                                </li>
                                <li>
                                    <strong>Age:</strong> @pet.AgeYears
                                </li>
                                <li>
                                    <strong>Posted by:</strong> @(pet.User?.FirstName) @(pet.User?.LastName)
                                </li>
                                <li>
                                    <strong>Date:</strong> @pet.CreatedAt.ToString("d MMMM yyyy")
                                </li>
                                <li>
                                    <strong>Price:</strong> @pet.Price.ToString("C")
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <section class="page-search">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    Your wishlist is empty
                </div>
            </div>
        </div>
    </section>
}

<script src="~/js/petFunctions.js"></script>
