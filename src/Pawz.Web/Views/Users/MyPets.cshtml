@using Pawz.Web.Models.User
@model MyPetsViewModel<Pawz.Application.Models.Pet.UserPetResponse>

@if (Model == null || !Model.Pets.Any())
{
    <p>
        You haven't created any pets yet. Click
        <a asp-controller="Pet" asp-action="Create">  here </a> to create one now.
    </p>
}
else
{
    <table class="table table-responsive product-dashboard-table">
        <thead>
            <tr>
                <th>Image</th>
                <th style="padding-left: 30px;">Name</th>
                <th class="text-center" style="padding-right: 50px;">Breed</th>
                <th class="text-center" style="padding-right: 35px;">Status</th>
                <th class="text-center">Requests</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody id="petsTableBody">
            @foreach (var pet in Model.Pets)
            {
                <tr>
                    <td class="product-thumb">
                        <img src="@(pet.PetImages.First().ImageUrl.StartsWith("http") ? pet.PetImages.First().ImageUrl : Url.Content("~/images/pets/" + pet.PetImages.First().ImageUrl))" alt="Pet Photo" class="rounded-circle" style="width: 100px; height: 100px;">
                    </td>
                    <td class="product-details" style="padding-left: 30px;">
                        <h3 class="title" style="font-size: 16px;">@pet.Name</h3>
                    </td>
                    <td class="product-category" style="padding-right: 50px;">
                        <span class="categories" style="font-size: 15px;">@pet.Breed.Name</span>
                    </td>
                    <td class="status text-center" style="padding-right: 35px;">
                        <span style="font-size: 15px;">@pet.Status</span>
                    </td>
                    <td class="text-center">
                        <a asp-controller="AdoptionRequest"
                           asp-action="GetPetAdoptionRequests"
                           asp-route-petId="@pet.Id"
                           class="p-2 mr-3 btn btn-outline-info btn-sm rounded-pill">Requests</a>
                    </td>
                    <td class="action text-center" data-title="Action">
                        <div class="">
                            <ul class="list-inline justify-content-center" style="display: flex; justify-content: center; flex-direction:column gap: 10px;">
                                <li class="list-inline-item">
                                    <form asp-controller="Pet" asp-action="Details" method="get">
                                        <input type="hidden" name="id" value="@pet.Id" />
                                        <button type="submit"
                                                class="pet-action-buttons link-button view-button"
                                                data-toggle="tooltip"
                                                data-placement="top"
                                                title="View">
                                            <i class="fa fa-eye"></i>
                                        </button>
                                    </form>
                                </li>
                                <li class="list-inline-item">
                                    <form asp-controller="Pet" asp-action="Edit" method="get">
                                        <input type="hidden" name="id" value="@pet.Id" />
                                        <button type="submit"
                                                class="pet-action-buttons link-button edit-button"
                                                data-toggle="tooltip"
                                                data-placement="top"
                                                title="Edit">
                                            <i class="fa fa-pencil"></i>
                                        </button>
                                    </form>
                                </li>
                                <li class="list-inline-item">
                                    <button type="submit"
                                            class="pet-action-buttons link-button delete-button"
                                            data-toggle="modal" data-target="#deleteConfirmationModal"
                                            onclick="setDeleteFormAction('@pet.Id', '@pet.Name')"
                                            title="Delete">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                    <form id="deleteForm-@pet.Id" asp-controller="Pet" asp-action="Delete" method="post" style="display:none;">
                                        <input type="hidden" name="id" value="@pet.Id" />
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="#" data-page="@(Model.CurrentPage - 1)" data-cursor="" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="#" data-page="@i" data-cursor="@(i == Model.CurrentPage ? Model.NextCursor : "")">@i</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="#" data-page="@(Model.CurrentPage + 1)" data-cursor="@Model.NextCursor" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>

    @* <!-- Modali per Delete --> *@
    <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete Confirmation</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body p-4">
                    Are you sure you want to delete your pet, <span id="petName"></span>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" id="confirmDeleteButton">Confirm</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

<script>
    function setDeleteFormAction(petId, petName) {
        document.getElementById('petName').textContent = petName;

        document.getElementById('confirmDeleteButton').onclick = function () {
            document.getElementById('deleteForm-' + petId).submit();
        };
    }
</script>

<script>
    $(document).ready(function () {
        var cursors = {};
        cursors['1'] = ''; 
        cursors['@Model.CurrentPage'] = '@Model.NextCursor';

        function updatePagination(result) {
            $('#petsTableBody').html($(result).find('#petsTableBody').html());
            $('.pagination').replaceWith($(result).find('.pagination'));

            $('.pagination .page-link').each(function () {
                var page = $(this).data('page');
                var cursor = $(this).data('cursor');
                if (cursor) {
                    cursors[page] = cursor;
                }
            });

            attachPaginationHandlers();
        }

        function attachPaginationHandlers() {
            $('.pagination .page-link').off('click').click(function (e) {
                e.preventDefault();
                var targetPage = $(this).data('page');
                var currentPage = parseInt($('.pagination .active').text());
                var pageSize = @Model.PageSize;
                var cursor = '';

                if (targetPage > currentPage) {
                    cursor = cursors[currentPage] || '';
                } else if (targetPage < currentPage) {
                    cursor = cursors[targetPage - 1] || '';
                }

                $.ajax({
                    url: '@Url.Action("MyPets", "Users")',
                    data: { page: targetPage, pageSize: pageSize, cursor: cursor },
                    type: 'GET',
                    success: updatePagination,
                    error: function () {
                        alert('Error loading pets. Please try again.');
                    }
                });
            });
        }

        attachPaginationHandlers();
    });
</script>


