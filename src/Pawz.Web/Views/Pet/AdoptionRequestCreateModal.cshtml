@model Pawz.Web.Models.Pet.AdoptionRequestCreateModel


<div class="modal fade" id="adoptionRequestModal" tabindex="-1" role="dialog" aria-labelledby="adoptionRequestModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-width-80" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="adoptionRequestModalLabel">Adoption Request</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" method="post" asp-controller="AdoptionRequest" enctype="multipart/form-data" id="adoptionRequestForm">
                    <fieldset class="p-2">
                        <input type="hidden" asp-for="PetId" />
                        <div class="modal-body">
                            <div class="row m-1">
                                <div class="col-4">
                                    <div class="form-group">
                                        <label asp-for="CountryId" class="form-label-site">Country <span class="span-required">*</span></label>
                                        <select asp-for="CountryId" class="form-control w-100" id="CountryId">
                                            <option selected disabled hidden value="">Select your country</option>
                                            @foreach (var country in Model.Countries)
                                            {
                                                <option value="@country.Value">@country.Text</option>
                                            }
                                        </select>
                                        <span asp-validation-for="CountryId" class="form-label input-error-text"></span>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <label asp-for="CityId" class="form-label-site">
                                            City <span class="span-required"> * </span>
                                        </label>
                                        <select asp-for="CityId" class="form-control w-100" id="CityId">
                                            <option selected disabled hidden value="">Select your city</option>
                                            @foreach (var city in Model.Cities)
                                            {
                                                <option value="@city.Value">@city.Text</option>
                                            }
                                        </select>
                                        <span asp-validation-for="CityId" class="form-label input-error-text"></span>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <label asp-for="Address" class="form-label-site">
                                            Address <span class="span-required"> *</span>
                                        </label>
                                        <input asp-for="Address" class="form-control w-100" placeholder="Enter your address">
                                        <span asp-validation-for="Address" class="form-label input-error-text"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row m-1">
                                <div class="col-4">
                                    <div class="form-group">
                                        <label asp-for="PostalCode" class="form-label-site">
                                            Postal Code <span class="span-required">*</span>
                                        </label>
                                        <input asp-for="PostalCode" class="form-control w-100" placeholder="Postal Code">
                                        <span asp-validation-for="PostalCode" class="form-label input-error-text"></span>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <label asp-for="ContactNumber" class="form-label-site">
                                            Contact Number <span class="span-required">*</span>
                                        </label>
                                        <input asp-for="ContactNumber" type="tel" class="form-control w-100" placeholder="+XXX XX XXX XXX" autocomplete="tel">
                                        <span asp-validation-for="ContactNumber" class="form-label input-error-text"></span>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <label asp-for="IsRentedProperty" class="form-label-site">
                                            Do you live in a rented property? <span class="span-required">*</span>
                                        </label>
                                        <div class="radio-group">
                                            <label class="radio-inline"><input class="radio-style" type="radio" asp-for="IsRentedProperty" value="true"> Yes</label>
                                            <label class="radio-inline"><input class="radio-style" type="radio" asp-for="IsRentedProperty" value="false"> No</label>
                                        </div>
                                        <span asp-validation-for="IsRentedProperty" class="form-label input-error-text"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row m-1">
                                <div class="col-6 ">
                                    <label asp-for="OutdoorSpaceDetails" class="form-label-site">
                                        Outdoor Space Details <span class="span-required">*</span>
                                    </label>
                                </div>
                                <div class="col-6 ">
                                    <label asp-for="OtherPetsDetails" class="form-label-site">
                                        Other Pets Details <span class="span-required">*</span>
                                    </label>
                                </div>
                            </div>
                            <div class="row align-items-center m-1">
                                <div class="col-2 d-flex ">
                                    <div class="radio-group">
                                        <label class="radio-inline"><input class="radio-style" type="radio" asp-for="HasOutdoorSpace" value="true" onchange="toggleTextArea('HasOutdoorSpace', 'OutdoorSpaceDetails')"> Yes</label>
                                        <label class="radio-inline"><input class="radio-style" type="radio" asp-for="HasOutdoorSpace" value="false" onchange="toggleTextArea('HasOutdoorSpace', 'OutdoorSpaceDetails')"> No</label>
                                        <span asp-validation-for="HasOutdoorSpace" class="form-label input-error-text"></span>
                                    </div>                                   
                                </div>
                                <div class="col-4">
                                    <div class="form-group"> 
                                        <textarea asp-for="OutdoorSpaceDetails" id="OutdoorSpaceDetails" class="form-control w-100" placeholder="Provide more outdoor space details..."></textarea>
                                        <span asp-validation-for="OutdoorSpaceDetails" class="form-label input-error-text"></span>  
                                        <span class="form-label input-error-text"></span>
                                    </div>
                                </div>
                                <div class="col-2 d-flex">
                                    <div class="form-group">
                                        <div class="radio-group">
                                            <label class="radio-inline"><input class="radio-style" type="radio" asp-for="OwnsOtherPets" value="true" onchange="toggleTextArea('OwnsOtherPets', 'OtherPetsDetails')"> Yes</label>
                                            <label class="radio-inline"><input class="radio-style" type="radio" asp-for="OwnsOtherPets" value="false" onchange="toggleTextArea('OwnsOtherPets', 'OtherPetsDetails')"> No</label>
                                            <span asp-validation-for="OwnsOtherPets" class="form-label input-error-text"></span>
                                        </div>                                      
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <textarea asp-for="OtherPetsDetails" id="OtherPetsDetails" class="form-control w-100" placeholder="Provide more pet details..."></textarea>
                                        <span asp-validation-for="OwnsOtherPets" class="form-label input-error-text"></span>
                                    </div>
                                </div>
                            </div>
                            <div action="row">
                                <div class="col-12 ">
                                    <div class="form-group">
                                        <label asp-for="Message" class="form-label-site">Additional Message or Comments</label>
                                        <textarea asp-for="Message" class="form-control w-100" placeholder="Provide any additional comments"></textarea>
                                        <span asp-validation-for="Message" class="form-label input-error-text"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row m-3 justify-content-center">
                            <div class="col-6 text-center">
                                <button type="button" class="btn btn-outline-danger w-75 mb-0 " data-dismiss="modal">Close</button>

                            </div>
                            <div class="col-6 text-center">
                                <button type="submit" class="btn btn-primary font-weight-bold w-75 mb-0">Submit</button>

                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
