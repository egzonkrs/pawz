@inject Pawz.Application.Interfaces.IUserAccessor UserAccessor
@model IEnumerable<UserPetViewModel>

<section class="dashboard section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="widget user-dashboard-profile">
                        <div class="profile-thumb">
                            <img src="~/template/images/user/user-thumb.jpg" alt="" class="rounded-circle">
                        </div>
                        <h5 class="text-center">@UserAccessor.GetUserName()</h5>
                        <p>Joined February 06, 2017</p>
                        <a href="user-profile.html" class="btn btn-main-sm">Edit Profile</a>
                    </div>
                    <div class="widget user-dashboard-menu">
                        <ul>
                            <li class="active"><a asp-controller="Pet" asp-action="MyPets"><i class="fa fa-user"></i> My Pets</a></li>
                            <li>
                                <a href="dashboard-favourite-ads.html">
                                    <i class="fa fa-bookmark-o"></i> Adoption Requests
                                    <span>5</span>
                                </a>
                            </li>
                            <li>
                                <a href="dashboard-archived-ads.html">
                                    <i class="fa fa-file-archive-o"></i>Adoptions
                                    <span>12</span>
                                </a>
                            </li>
                            <li>
                                <a href="dashboard-pending-ads.html"><i class="fa fa-bolt"></i>My Adoptions<span>23</span></a>
                            </li>
                            <li><a href="index.html"><i class="fa fa-cog"></i> Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="widget dashboard-container my-adslist">
                    <h3 class="widget-header">My Pets</h3>
                    <table class="table table-responsive product-dashboard-table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th style="padding-left: 30px;">Name</th>
                                <th class="text-center" style="padding-right: 50px;">Breed</th>
                                <th class="text-center" style="padding-right: 35px;">Status</th>
                                <th class="text-center">Location</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pet in Model)
                            {
                                <tr>
                                    <td class="product-thumb">
                                        <img src="@pet.PhotoUrl" alt="Pet Photo" class="rounded-circle" style="width: 100px; height: 100px;">
                                    </td>
                                    <td class="product-details" style="padding-left: 30px;">
                                        <h3 class="title" style="font-size: 16px;">@pet.Name</h3>
                                    </td>
                                    <td class="product-category" style="padding-right: 50px;">
                                        <span class="categories" style="font-size: 15px;">@pet.BreedName</span>
                                    </td>
                                    <td class="status text-center" style="padding-right: 35px;">
                                        <span style="font-size: 15px;">@pet.Status</span>
                                    </td>
                                    <td class="location text-center">
                                        <span style="font-size: 15px;">@pet.LocationName</span>
                                    </td>
                                    <td class="action text-center" data-title="Action">
                                        <div class="">
                                            <ul class="list-inline justify-content-center" style="display: flex; justify-content: center; flex-direction:column gap: 10px;">
                                                <li class="list-inline-item">
                                                    <a data-toggle="tooltip" data-placement="top" title="View" class="view" href="pet-details.html?id=@pet.Id" style="font-size: 12px;">
                                                        <i class="fa fa-eye"></i>
                                                    </a>
                                                </li>
                                                <li class="list-inline-item">
                                                    <a class="edit" data-toggle="tooltip" data-placement="top" title="Edit" href="edit-pet.html?id=@pet.Id" style="font-size: 12px;">
                                                        <i class="fa fa-pencil"></i>
                                                    </a>
                                                </li>
                                                <li class="list-inline-item">
                                                    <a class="delete" data-toggle="tooltip" data-placement="top" title="Delete" href="delete-pet.html?id=@pet.Id" style="font-size: 12px;">
                                                        <i class="fa fa-trash"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- pagination -->
                <div class="pagination justify-content-center">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item">
                                <a class="page-link" href="dashboard.html" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item"><a class="page-link" href="dashboard.html">1</a></li>
                            <li class="page-item active"><a class="page-link" href="dashboard.html">2</a></li>
                            <li class="page-item"><a class="page-link" href="dashboard.html">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="dashboard.html" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
