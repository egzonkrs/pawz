@model IEnumerable<Pawz.Web.Models.Pet.PetViewModel>

<div class="widget category-list">
    <h4 class="widget-header">All Species</h4>
    <ul class="category-list">
        @foreach (var species in Model.Select(pet => pet.Breed.Species)
                      .GroupBy(s => s.Name)
                      .Select(g => g.First()))
        {
            <li>
                <a href="#">
                    @species.Name
                </a>
            </li>
        }
    </ul>
</div>

<div class="widget category-list">
    <h4 class="widget-header">All Breeds</h4>
    <ul class="category-list">
        @foreach (var breed in Model.Select(pet => pet.Breed)
                      .GroupBy(b => b.Name)
                      .Select(g => g.First()))
        {
            <li>
                <a href="#">
                    @breed.Name
                </a>
            </li>
        }
    </ul>
</div>
