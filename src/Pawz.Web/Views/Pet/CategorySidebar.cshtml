@model IEnumerable<Pawz.Web.Models.Pet.PetViewModel>

<!-- Remove All Filters Button -->
<div class="widget">
    <a href="@Url.Action("Index", "Pet")">
        Remove Applied Filters
    </a>
</div>

<!-- Species Filter -->
<div class="widget category-list">
    <h4 class="widget-header">All Species</h4>
    <ul class="category-list">
        @foreach (var species in Model.Select(pet => pet.Breed.Species).Distinct())
        {
            <li>
                <a href="@Url.Action("Index", "Pet", new { species = species.Name })">
                    @species.Name
                </a>
            </li>
        }
    </ul>
</div>

<!-- Breed Filter -->
<div class="widget category-list">
    <h4 class="widget-header">All Breeds</h4>
    <ul class="category-list">
        @foreach (var breed in Model.Select(pet => pet.Breed).Distinct())
        {
            <li>
                <a href="@Url.Action("Index", "Pet", new { breed = breed.Name })">
                    @breed.Name
                </a>
            </li>
        }
    </ul>
</div>
