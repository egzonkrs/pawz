@model IEnumerable<Pawz.Web.Models.Pet.PetViewModel>

<div class="widget category-list">
    <h4 class="widget-header">All Species</h4>
    <ul class="category-list">
        @foreach (var species in Model.GroupBy(pet => pet.Breed.Species.Name))
        {
            <li><a href="#">@species.Key <span>@species.Count()</span></a></li>
        }
    </ul>
</div>

<div class="widget category-list">
    <h4 class="widget-header">All Breeds</h4>
    <ul class="category-list">
        @foreach (var breed in Model.GroupBy(pet => pet.Breed.Name))
        {
            <li><a href="#">@breed.Key <span>@breed.Count()</span></a></li>
        }
    </ul>
</div>
