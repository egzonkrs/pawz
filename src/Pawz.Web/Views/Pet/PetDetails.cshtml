@model dynamic

@{
ViewBag.Title = "Page";
Layout = "_Layout";
}

<section class="section bg-gray">
    <!-- Container Start -->
    <div class="container">
        <div class="row">
            <!-- Left sidebar -->
            <div class="col-lg-8">
                <div class="product-details">
                    <h1 class="product-title">Golden Retriever</h1>
                    <div class="product-meta">
                        <ul class="list-inline">
                            <li class="list-inline-item"><i class="fa fa-user-o"></i> By <a href="#">Andrew</a></li>
                            <li class="list-inline-item"><i class="fa fa-location-arrow"></i> Location<a href="#">Ferizaj</a></li>
                        </ul>
                    </div>
                    <!-- Pet slider -->
                    <div class="product-slider mt-4">
                        <div class="product-slider-item my-4" data-image="/template/images/products/products-1.jpg">
                            <img class="img-fluid w-100" src="~/template/images/products/products-1.jpg" alt="product-img">
                        </div>
                        <div class="product-slider-item my-4" data-image="/template/images/products/products-2.jpg">
                            <img class="d-block img-fluid w-100" src="~/template/images/products/products-2.jpg" alt="Second slide">
                        </div>
                        <div class="product-slider-item my-4" data-image="/template/images/products/products-3.jpg">
                            <img class="d-block img-fluid w-100" src="~/template/images/products/products-3.jpg" alt="Third slide">
                        </div>
                        <div class="product-slider-item my-4" data-image="/template/images/products/products-1.jpg">
                            <img class="d-block img-fluid w-100" src="~/template/images/products/products-1.jpg" alt="Third slide">
                        </div>
                        <div class="product-slider-item my-4" data-image="/template/images/products/products-2.jpg">
                            <img class="d-block img-fluid w-100" src="~/template/images/products/products-2.jpg" alt="Third slide">
                        </div>
                    </div>
                    <!-- Pet slider -->
                    <div class="content mt-5 pt-5">
                        <ul class="nav nav-pills  justify-content-center" id="pills-tab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home"
                                   aria-selected="true">Pet Description</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile"
                                   aria-selected="false">Specifications</a>
                            </li>
                        </ul>
                        <div class="tab-content" id="pills-tabContent">
                            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                                <h3 class="tab-title">Pet Description</h3>
                                <p>Golden Retrievers are one of the most popular dog breeds due to their friendly, tolerant attitude.
                                    They are intelligent, easy to train, and eager to please, making them ideal family pets. With their warm,
                                    golden coats and expressive eyes, they are as beautiful as they are loving. Golden Retrievers are known for
                                    their gentle and calm demeanor, making them excellent companions for children and other pets. They are also
                                    highly versatile and can be trained for a variety of roles, including therapy, search and rescue, and service work.
                                    Their love for outdoor activities, especially swimming, makes them a great choice for active families. Overall,
                                    Golden Retrievers are loyal, affectionate, and incredibly social, thriving on human interaction and always eager to be a part of the family.</p>
                            </div>
                            <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                                <h3 class="tab-title">Pet Specifications</h3>
                                <table class="table table-bordered product-table">
                                    <tbody>
                                    <tr>
                                        <td>Location</td>
                                        <td>Kosova,Gjilan</td>
                                    </tr>
                                    <tr>
                                        <td>Specie</td>
                                        <td>Dog</td>
                                    </tr>
                                    <tr>
                                        <td>Breed</td>
                                        <td>Golden Retriever</td>
                                    </tr>
                                    <tr>
                                        <td>Condition</td>
                                        <td>Healthy</td>
                                    </tr>
                                    <tr>
                                        <td>Age</td>
                                        <td>3</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="widget price text-center">
                        <h4>Price</h4>
                        <p>$230</p>
                    </div>
                    <!-- User Profile widget -->
                    <div class="widget user text-center">
                        <img class="rounded-circle img-fluid mb-5 px-5" src="~/template/images/user/user-thumb.jpg" alt="">
                        <h4><a href="#">Jonathon Andrew</a></h4>
                        <p class="member-time">Member Since Jun 27, 2017</p>
                    </div>
                    <!-- Adoption Request -->
                    <div class="text-center">
                        <!-- Adoption Request Button -->
                        <button class="btn btn-primary mb-4 adoption-request-button" data-toggle="modal" data-target="#adoptionRequestModal">
                            Adoption Request
                        </button>
                    </div>
                    <!-- Safety tips widget -->
                    <div class="widget disclaimer">
                        <h5 class="widget-header">Safety Tips</h5>
                        <ul>
                            <li>Meet seller at a public place</li>
                            <li>Check the item before you buy</li>
                            <li>Pay only after collecting the item</li>
                            <li>Pay only after collecting the item</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal -->
        <partial name="Modal" />
    </div>
    <!-- Container End -->
</section>
