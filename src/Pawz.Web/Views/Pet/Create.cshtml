@model Pawz.Web.Models.PetCreateViewModel

@{
    ViewData["Title"] = "Create Pet";
}

<section class="pet-create py-5 border-top-1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8 align-item-center">
                <div class="border border mb-4">
                    <h3 class="bg-gray p-4">Create New Pet</h3>
                    <form asp-action="Create" method="post">
                        <fieldset class="p-4">
                            <div class="">
                                <label asp-for="Name" class="form-label">Pet Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Pet Name" />
                                <span asp-validation-for="Name" class="form-label input-error-text"></span>
                            </div>

                            <div class="">
                                <label asp-for="SpeciesId" class="form-label">Species</label>
                                <select asp-for="SpeciesId" class="form-select" asp-items="Model.Species">
                                    <option disabled selected>--Select Species--</option>
                                </select>
                                <span asp-validation-for="SpeciesId" class="form-label input-error-text"></span>
                            </div>

                            <div class="">
                                <label asp-for="BreedId" class="form-label">Breed</label>
                                <select asp-for="BreedId" class="form-select" asp-items="Model.Breeds">
                                    <option disabled selected>--Select Breed--</option>
                                </select>
                                <span asp-validation-for="BreedId" class="form-label input-error-text"></span>
                            </div>

                            <div class="">
                                <label asp-for="AgeYears" class="form-label">Age in Years</label>
                                <input asp-for="AgeYears" class="form-control" placeholder="Age in Years" type="number" min="0" />
                                <span asp-validation-for="AgeYears" class="form-label input-error-text"></span>
                            </div>

                            <div class="">
                                <label asp-for="AgeMonths" class="form-label">Age in Months</label>
                                <input asp-for="AgeMonths" class="form-control" placeholder="Age in Months" type="number" min="0" />
                                <span asp-validation-for="AgeMonths" class="form-label input-error-text"></span>
                            </div>

                            <div class="">
                                <label asp-for="About" class="form-label">About</label>
                                <textarea asp-for="About" class="form-control" placeholder="Description about the pet"></textarea>
                                <span asp-validation-for="About" class="form-label input-error-text"></span>
                            </div>

                            <div class="">
                                <label asp-for="Price" class="form-label">Price</label>
                                <input asp-for="Price" class="form-control" placeholder="Price" type="number" min="0" />
                                <span asp-validation-for="Price" class="form-label input-error-text"></span>
                            </div>

                            <div class="">
                                <label asp-for="Status" class="form-label">Status</label>
                                <select asp-for="Status" class="form-select">
                                    <option disabled selected>--Select Status--</option>
                                    @foreach (var status in Enum.GetValues(typeof(Pawz.Domain.Enums.PetStatus)))
                                    {
                                        <option value="@status">@status</option>
                                    }
                                </select>
                                <span asp-validation-for="Status" class="form-label input-error-text"></span>
                            </div>

                            <div class="">
                                <label asp-for="LocationId" class="form-label">Location</label>
                                <select asp-for="LocationId" class="form-select">
                                    <option disabled selected>--Select Location--</option>
                                    <option value="1">Location 1</option>
                                    <option value="2">Location 2</option>
                                    <option value="3">Location 3</option>
                                    <option value="4">Location 4</option>
                                </select>
                                <span asp-validation-for="LocationId" class="form-label input-error-text"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <a href="@Url.Action("Index", "Pet")" class="text-sm">
                                    <span class="text-dark">Back to List</span>
                                </a>
                                <button type="submit" class="btn btn-primary font-weight-bold">Create Pet</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
